generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model WaSession {
  id         String   @id
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  // credenciais principais (AuthCreds)
  creds      Json
  // chave-valor para o SignalKeyStore (type|id -> value)
  keys       WaKey[]
}

model WaKey {
  id        String   @id // `${type}|${keyId}`
  sessionId String
  value     Bytes    // armazenamos bin√°rio (Buffer)
  session   WaSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
